bool isPalindrome(int x) {
    // Negative numbers and multiples of 10 (except 0) are not palindromes
    if (x < 0 || (x % 10 == 0 && x != 0)) {
        return false;
    }

    int reversed = 0;
    int original = x;

    while (x > reversed) {
        int remainder = x % 10;
        reversed = reversed * 10 + remainder;
        x /= 10;
    }
    return x == reversed || x == reversed / 10;
}
